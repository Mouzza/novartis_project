<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - LOKAALKABAAL</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/inlog.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/jquery-1.10.2.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery-ui-1.10.4.custom.js" type="text/javascript"></script>
    <link href="~/Content/jquery-ui-1.10.4.custom.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/countdown.js" type="text/javascript"></script>
    <script type="text/javascript" src="~/scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/select2.js" type="text/javascript"></script>
    <link href="~/Content/select2.css" rel="stylesheet" type="text/css" />

    <script type="text/javascript" src="~/scripts/bootstrap-datepicker.min.js"></script>
    <script type="text/javascript" src="~/scripts/locales/bootstrap-datepicker.nl-BE.min.js" charset="UTF-8"></script>

    <link rel="stylesheet" href="~/Content/bootstrap-datepicker3.css" />


    <script src="~/Scripts/login.js" type="text/javascript"></script>
    <script src="~/Scripts/websiteAnimation.js" type="text/javascript"></script>

</head>
<body>

    @if (!Request.IsAuthenticated)
    {
        <div id="headerWrapper">
            <div class="navbar navbar-inverse navbar-fixed-top eersteMenu">
                <div class="container">
                    <div class="navbar-header">
                        <a href="@Url.Action("Index", "Home")"><img id="logoImage" src="~/Images/logo.png"></a>
                    </div>
                    @Html.Partial("_LoginPartial", new JPP.UI.Web.MVC.Models.LoginViewModel())
                </div>
            </div>
            <div class="navbar navbar-inverse tweedeMenu">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li id="menuItem1"><a>Home</a></li>
                            <li>@Html.ActionLink("Over ons", "Diensten", "Home")</li>
                            <li id="menuItem3"><a>Contact</a></li>             
                            <li>@Html.ActionLink("Registreer", "Register", "Account")</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        //bovenste wrapper met JPP afbeelding
        <div id="videoWrapper">
            @*<iframe width="560" height="315" src="https://www.youtube.com/embed/IPIPscjd4dI" frameborder="0" allowfullscreen></iframe>*@


            <div id="youtube">
                    <iframe id="theiframe" frameborder="0" allowfullscreen="1" src="https://www.youtube.com/embed/IPIPscjd4dI?autoplay=0&controls=0&showinfo=0&rel=0&amp"></iframe>

            </div>
            <div id="doorgaan">
                <a href="@Url.Action("Main","Home")" style='text-decoration:none;' id="centraleButton2">Ga verder!</a>
            </div>

            <div id="continueButton">
                <a href="#wrapper2" id="centraleButton"></a>
            </div>





            @*<div class="youtube">
                    <iframe style="height: 100%; width:100%; border: none"  src="https://www.youtube.com/embed/IPIPscjd4dI?autoplay=0&controls=0&showinfo=0&rel=0&amp" frameborder="0" allowfullscreen="1"></iframe>
                </div>*@

        </div>






        //eerste inhoud
        <div id="mainWrapper">
            <div class="container body-content">

                @RenderBody()

            </div>
        </div>


        //registreer
        <div id="extraWrapper">
            <div class="container body-content">
                <div class="row">
                    <div class="col-md-4 centraal">

                        <a href="#"><img src="~/Images/websitePage logos/iconExpert.png"></a>
                        <h2>Vraag aan een expert</h2>
                        <p>
                            Heb je vragen over bepaalde onderwerpen? Stel je vraag dan aan een expert over dit onderwerp.
                        </p>
                    </div>
                    <div class="col-md-4 centraal">

                        <a href="#"><img src="~/Images/websitePage logos/iconQuestion.png"></a>
                        <h2>Comment</h2>
                        <p>
                            Deel je mening over de pagina's mee in een comment.
                        </p>
                    </div>
                    <div class="col-md-4 centraal">

                        <a href="#"><img src="~/Images/websitePage logos/iconVolgOp.png"></a>
                        <h2>Volg op</h2>
                        <p>
                            Volg wat er met de winnende antwoorden gebeurt op. En zie de veranderingen dat deze teweegbrengen in Leuven.
                        </p>
                    </div>

                </div>
            </div>
        </div>

        //afbeelding leuven
        <div id="wrapper5">
            <h1>Sponsors</h1>
            <hr />
            <div id="fotoWrapper2">
                <div class="row">
                    <div class="col-md-4 centraal2">
                        <a href="#"><img src="~/Images/sponsors logos/iconLeuven.png"></a>
                        <h2>Leuven</h2>
                    </div>
                    <div class="col-md-4 centraal3">
                        <a href="#"><img src="~/Images/sponsors logos/Novartis.png"></a>
                        <h2>Novartis</h2>
                    </div>
                    <div class="col-md-4 centraal2">
                        <a href="#"><img src="~/Images/sponsors logos/iconTreeCompany2.png"></a>
                        <h2>treecompany</h2>
                    </div>
                </div>
            </div>
        </div>
        //laatste wrapper
        <div id="wrapper4">
            <h1>Bedrijfs informatie</h1>
            <hr />
            <div class="container body-content">
                <div class="row">

                    @Html.Partial("~/Views/Home/Contact.cshtml")

                </div>
            </div>

            <div id="to-top">Ga naar de Top</div>
        </div>
        <div id="footerWrapper">
            <footer id="socialFooter">
                <ul class="footerMenu">

                    <li><a href="#"><img src="~/Images/socialMedia icons/twitter.png" alt="TWITTER" /></a></li>
                    <li><a href="#"><img src="~/Images/socialMedia icons/fb.png" alt="FACEBOOK" /></a></li>
                    <li><a href="#"><img src="~/Images/socialMedia icons/google.png" alt="GOOGLE+" /></a></li>
                </ul>
            </footer>
            <footer class="footer">
                <p>&copy; @DateTime.Now.Year - Novartis</p>
                <ul class="footerMenu">
                    <li id="menuItem1">@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Over ons", "Diensten", "Home")</li>
                    <li>@Html.ActionLink("Registreer", "Register", "Account")</li>
                </ul>
            </footer>
        </div>

    }



    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
