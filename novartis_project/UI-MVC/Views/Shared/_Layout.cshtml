<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - JPP Home</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/inlog.css" rel="stylesheet" type="text/css" />

    <script src="~/Scripts/jquery-2.1.3.min.js" type="text/javascript"></script>

    <script type="text/javascript" src="~/scripts/bootstrap.min.js"></script>

  
    <script type="text/javascript" src="~/scripts/bootstrap-datepicker.min.js"></script>
    <script type="text/javascript" src="~/scripts/locales/bootstrap-datepicker.nl-BE.min.js" charset="UTF-8"></script>

    @*<link rel="stylesheet" href="~/Content/bootstrap-datepicker.css" />
    <link rel="stylesheet" href="~/Content/bootstrap-datepicker.min.css" />
    <link rel="stylesheet" href="~/Content/bootstrap-datepicker.standalone.css" />
    <link rel="stylesheet" href="~/Content/bootstrap-datepicker.standalone.min.css" />*@
    <link rel="stylesheet" href="~/Content/bootstrap-datepicker3.css" />
    @*<link rel="stylesheet" href="~/Content/bootstrap-datepicker3.min.css" />
    <link rel="stylesheet" href="~/Content/bootstrap-datepicker3.standalone.css" />
    <link rel="stylesheet" href="~/Content/bootstrap-datepicker3.standalone.min.css" />*@


    <script src="~/Scripts/login.js" type="text/javascript"></script>
    <script src="~/Scripts/websiteAnimation.js" type="text/javascript"></script>



</head>
<body>


    @if(!Request.IsAuthenticated)
    {
        <div id="headerWrapper">
            <div class="navbar navbar-inverse navbar-fixed-top eersteMenu">
                <div class="container">
                    <div class="navbar-header">
                        <a href="@Url.Action("Index", "Home")"><img id="logoImage" src="~/Images/logo.png"></a>

                    </div>

                    @Html.Partial("_LoginPartial", new JPP.UI.Web.MVC.Models.LoginViewModel())
                </div>
            </div>
            <div class="navbar navbar-inverse tweedeMenu">
                <div class="container">
                    <div class="navbar-header">

                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li id="menuItem1"><a>Home</a></li>
                            <li>@Html.ActionLink("Over ons", "Diensten", "Home")</li>
                            <li id="menuItem3"><a>Contact</a></li>
                            <li id="menuItem4"><a>Top 10</a></li>
                            <li>@Html.ActionLink("Registreer", "Register", "Account")</li>

                        </ul>

                    </div>
                </div>
            </div>

        </div>
 
            //bovenste wrapper met JPP afbeelding
            <div id="videoWrapper">
                @*<iframe width="1750" height="800" src="https://www.youtube.com/embed/tdWiDKXegQA" frameborder="0" allowfullscreen ></iframe>*@
                    <div id="mainContent">
                       
                        <a href="#wrapper2" id="centraleButton">Ontdek meer!</a>
                        @*<img id="playButton" src="~/Images/websitePage logos/iconPlay.png" alt="play button" />*@
                    </div>

             
 

            </div>
        



 

        //eerste inhoud
        <div id="mainWrapper">
            <div class="container body-content">
      
                @RenderBody()


            </div>

        </div>

       
        //registreer
        <div id="extraWrapper">
            <div class="container body-content">
                <div class="row">
                    <h1>Top 10</h1>
                   
                    <hr />
                </div>
             </div>

        </div>
        //afbeelding leuven
        <div id="fotoWrapper">
            <div class="container body-content">
                <div class="jumbotron">
                    <h1>Bouw mee aan het Leuven van morgen!</h1>
                    <p class="lead">Met dank aan onze sponsors</p>
                    
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 centraal2">

                    <a href="#"><img src="~/Images/sponsors logos/iconLeuven.png"></a>
                    <h2>Leuven</h2>
                </div>
                <div class="col-md-4 centraal2">

                    <a href="#"><img src="~/Images/sponsors logos/iconKULeuven.png"></a>
                    <h2>KU Leuven</h2>
                </div>
                <div class="col-md-4 centraal2">

                    <a href="#"><img src="~/Images/sponsors logos/iconTreeCompany2.png"></a>
                    <h2>treecompany</h2>
                </div>

            </div>
              
        </div>
        //laatste wrapper
        <div id="wrapper4">
            <div class="container body-content">
                <div class="row">
                   
                    @Html.Partial("~/Views/Home/Contact.cshtml")
                  
                 </div>
             </div>
          
            <div id="to-top">Ga naar de Top</div>
        </div>
        <div id="footerWrapper">
            <footer id="socialFooter">
                <ul class="footerMenu">
              
                    <li><a href="#"><img src="~/Images/socialMedia icons/twitter.png" alt="TWITTER" /></a></li>
                    <li><a href="#"><img src="~/Images/socialMedia icons/fb.png" alt="FACEBOOK" /></a></li>
                    <li><a href="#"><img src="~/Images/socialMedia icons/google.png" alt="GOOGLE+" /></a></li>

                </ul>
            </footer>

            <footer class="footer">
                <p>&copy; @DateTime.Now.Year - Novartis</p>
                <ul class="footerMenu">
                    <li id="menuItem1">@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Over ons", "Diensten", "Home")</li>
                    <li>@Html.ActionLink("Registreer", "Register", "Account")</li>
                </ul>
            </footer>
        </div>

    }

  


  
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
