<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - JPP Home</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/inlog.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/jquery-2.1.3.min.js" type="text/javascript"></script>
    <script src="~/Scripts/login.js" type="text/javascript"></script>
    <script src="~/Scripts/websiteAnimation.js" type="text/javascript"></script>

</head>
<body>


    @if (Request.IsAuthenticated)
    {

        <div class="navbar navbar-inverse navbar-fixed-top eersteMenu">
            <div class="container">
                <div class="navbar-header">
                    <a href="@Url.Action("Index", "Home")"><img id="logoImage" src="~/Images/logo.png"></a>

                </div>

                @Html.Partial("_LoginPartial", new JPP.UI.Web.MVC.Models.LoginViewModel())
            </div>
        </div>
        <div class="navbar navbar-inverse  tweedeMenu">
            <div class="container">
                <div class="navbar-header">

                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("Over ons", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        @if (Request.IsAuthenticated)
                        {
                            <li>@Html.ActionLink("Mijn account", "Index", "Manage")</li>
                            <li>@Html.ActionLink("Mijn dossiers", "Index", "Manage")</li>

                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <li>@Html.ActionLink("Admin paneel", "Index", "Admin")</li>

                        }
                        @if (User.IsInRole("Moderator"))
                        {
                            <li id="specialMenuItem">@Html.ActionLink("Moderator paneel", "Index", "Admin")</li>


                        }


                    </ul>

                </div>
            </div>
        </div>
        if(Request.Url.AbsoluteUri != "http://localhost:44303/"){
            <div id="mainWrapper2">
                <div class="container body-content">

                    @RenderBody()

                </div>
                <hr />
            </div>

        } else{
            @RenderBody()
           
      }


                    //afbeelding leuven +footer
                    <div id="fotoWrapper">
                        <div class="container body-content">
                            <div class="jumbotron">
                                <h1>Bouw mee aan het Leuven van morgen!</h1>
                                <p class="lead">Met dank aan onze sponsors</p>

                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4 centraal2">

                                <a href="@Url.Action("Index", "Bericht")"><img src="~/Images/sponsors logos/iconLeuven.png"></a>
                                <h2>Leuven</h2>
                            </div>
                            <div class="col-md-4 centraal2">

                                <a href="@Url.Action("Index", "Recensie")"><img src="~/Images/sponsors logos/iconKULeuven.png"></a>
                                <h2>KU Leuven</h2>
                            </div>
                            <div class="col-md-4 centraal2">

                                <a href="@Url.Action("Index", "Admin")"><img src="~/Images/sponsors logos/iconTreeCompany2.png"></a>
                                <h2>treecompany</h2>
                            </div>

                        </div>


                        <div id="to-top">Ga naar de Top</div>
                    </div>

                    <div>

                        <footer id="socialFooter">
                            <ul class="footerMenu">
                                <li><a href="#"><img src="~/Images/socialMedia icons/twitter.png" alt="TWITTER" /></a></li>
                                <li><a href="#"><img src="~/Images/socialMedia icons/fb.png" alt="FACEBOOK" /></a></li>
                                <li><a href="#"><img src="~/Images/socialMedia icons/google.png" alt="GOOGLE+" /></a></li>

                            </ul>
                        </footer>

                        <footer class="footer">
                            <p>&copy; @DateTime.Now.Year - Novartis</p>
                            <ul class="footerMenu">
                                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                                <li>@Html.ActionLink("Over ons", "About", "Home")</li>
                                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>

                            </ul>
                        </footer>
                    </div>
                    }

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>