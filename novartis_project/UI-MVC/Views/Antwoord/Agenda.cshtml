@model JPP.BL.Domain.Antwoorden.AgendaAntwoord

@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
    ViewBag.Title = "Antwoord";
}
<link rel="stylesheet" type="text/css" href="~/Content/DossierModelOne.css">
<script src="~/Scripts/TimeLine.js" type="text/javascript"></script>
<link rel="stylesheet" type="text/css" href="~/Content/TimeLine.css">

@if (Model.evenementen.Count == 0)
{
    //nothing happens
}
else if (Model.evenementen.Count == 1)
{
    if (Model.module.eindDatum < DateTime.Now)
    {
        <div id="TimeLineWrapper">
            <div id="timeline">
                <div class="dot" id="one">
                    <span id="dotSpan"></span>
                    <h3>@Model.evenementen.ElementAt(0).startDatum</h3>
                </div>
            </div>

        </div>



        <article class='modal one'>
            <h4>@(Model.evenementen.ElementAt(0).startDatum) - @(Model.evenementen.ElementAt(0).eindDatum)</h4>
            <h2>@(Model.evenementen.ElementAt(0).title)</h2>
            <p>@(Model.evenementen.ElementAt(0).locatie) <br />@(Model.evenementen.ElementAt(0).evenementText)</p>
        </article>


    }
}
