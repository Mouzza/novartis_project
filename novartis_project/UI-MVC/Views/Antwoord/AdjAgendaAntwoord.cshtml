@model JPP.BL.Domain.Antwoorden.AgendaAntwoord

@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
    ViewBag.Title = "Geef een antwoord";
}
@*<link rel="stylesheet" type="text/css" href="~/Content/DossierModel.css">*@

@using (Html.BeginForm("AdjAgendaAntwoord", "Antwoord", FormMethod.Post))
{
  

    <div id="AgendaAntwoordWrapper">

        <div id="DossierModelTitle">
            @Html.TextAreaFor(model => model.titel, new { @class = "AdjAgendaModelTitle" })
            <p id="ValidatieError">@Html.ValidationMessageFor(model => model.titel)</p>

        </div><!--Hier moet de titel van de pagina komen-->

        <div id="DossierModelSubTitle">
            @Html.TextAreaFor(model => model.subtitel, new { @class = "AdjAgendaModelSubTitle" })
            <p id="ValidatieError">@Html.ValidationMessageFor(model => model.subtitel)</p>
        </div> <!--Hier moet de subtitel(beknopte uitleg) van de pagina komen-->

        <div id="AgendaModelTextVakEen">
            @Html.TextAreaFor(model => model.inhoud, new { @class = "AdjAgendaModelTextVakEen" })
            <p id="ValidatieError">@Html.ValidationMessageFor(model => model.inhoud)</p>
        @if (!Request.IsAuthenticated)
        {
            <p id="ValidatieError">Je moet ingelogd zijn om een antwoord te kunnen geven</p>
        }
       
        </div><!--Hier moet de eerste textvak van de pagina komen-->

     
      
    </div>


<p>
    @*@if (User.Identity.Name == Model.gebruikersNaam)
    {

        @Html.ActionLink("Wijzig", "Edit", new { id = Model.ID })
    }*@

</p>

<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <input type="submit" value="Publish" class="btn btn-default" />
    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}