@model JPP.BL.Domain.Antwoorden.Antwoord
@{
    ViewBag.title = "Antwoord verwijderen";
}
@if (User.Identity.Name == Model.gebruikersNaam || User.IsInRole("Admin") || User.IsInRole("Moderator"))
{
    <h3>Bent u zeker dat u deze antwoord wilt verwijderen?</h3>
    <div>
        <h4>Antwoord</h4>
        <hr />
        <dl class="dl-horizontal">


            <dt>
                Titel
            </dt>

            <dd>
                @Html.DisplayFor(model => model.titel)
            </dd>
            <dt>
                Subtitel
            </dt>
            <dt>
                Inhoud
            </dt>

            <dd>
                @Html.DisplayFor(model => model.inhoud)
            </dd>
            <dd>
                @Html.DisplayFor(model => model.subtitel)
            </dd>
            <dt>
                Datum
            </dt>

            <dd>
                @Html.DisplayFor(model => model.datum)
            </dd>

            <dt>
                Gebruiker
            </dt>

            <dd>
                @Html.DisplayFor(model => model.gebruikersNaam)
            </dd>
            <dt>
                Aantal stemmen
            </dt>

            <dd>
                @Html.DisplayFor(model => model.aantalStemmen)
            </dd>
            <dt>
                Aantal flags
            </dt>

            <dd>
                @Html.DisplayFor(model => model.aantalFlags)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Verwijder" class="btn btn-default" />

            </div>
        }
    </div>

}
else
{

    <h2>Access denied! o.O</h2>
}
