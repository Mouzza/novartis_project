@model JPP.BL.Domain.Antwoorden.DossierAntwoord

@{
    ViewBag.Title = "Oplossing";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
@{
    Html.RenderAction("Actief", "Module");
}

<div id="antwoordWrapper">
    <h2>Mijn oplossing</h2>



    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.gebruikersNaam)
        @Html.HiddenFor(model => model.ID)
        @Html.HiddenFor(model => model.percentageVolledigheid)
        @Html.HiddenFor(model => model.statusOnline)
        @Html.HiddenFor(model => model.datum)
        @Html.HiddenFor(model => model.stemmen)
        @Html.HiddenFor(model => model.persoonlijkeTags)
        @Html.HiddenFor(model => model.vasteTags)
        @Html.HiddenFor(model => model.flags)
        @Html.HiddenFor(model => model.evenementen)
        @Html.HiddenFor(model => model.module)
        @Html.HiddenFor(model => model.backgroundColor)
        @Html.HiddenFor(model => model.backgroundImage)
        @Html.HiddenFor(model => model.afbeeldingPath)
        @Html.HiddenFor(model => model.foregroundColor)
        @Html.HiddenFor(model => model.textvak2)
        @Html.HiddenFor(model => model.textvak3)
      







        <div class="form-horizontal">
      
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })



            <div class="form-group">
                <label class="control-label col-md-2">Titel</label>
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.titel)
                    @Html.ValidationMessageFor(model => model.titel, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Subtitel</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.subtitel, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.subtitel, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <label class="control-label col-md-2">Antwoord</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.inhoud, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.inhoud, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Extra info</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.extraInfo, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.extraInfo, "", new { @class = "text-danger" })
                </div>
            </div>





            <div class="form-group">
                <label class="control-label col-md-2">Extra vraag</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.extraVraag, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.extraVraag, "", new { @class = "text-danger" })
                </div>
            </div>




            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Bevestig" class="btn btn-default" />
                </div>
            </div>
        </div>
    }



</div>




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
