<div id="DossierModelPercent" style="color:@(Model.foregroundColor)"> <h1>Dossier volledigheid: @(Model.percentageVolledigheid) %</h1></div><!--Hier moet de titel van de pagina komen-->
<div id="DossierModelTitle" style="color:@(Model.TitleColor)"> <h1>@(Model.titel)</h1></div><!--Hier moet de titel van de pagina komen-->
<div id="DossierModelSubTitle" style="color:@(Model.SubTitleColor)"> <h2>@(Model.subtitel)</h2></div> <!--Hier moet de subtitel(beknopte uitleg) van de pagina komen-->

<div id="DossierModelTwoAfbeelding">
    <img src=@imgSrc />

  <iframe id="map-canvasTwo" src="https://www.google.com/maps/embed/v1/place?key=AIzaSyCjNN44_-PQjX5l5Tl6Ys5uSi5vs9EtAHg &q=@(Model.googleMapsAdress)"></iframe>

</div><!--Hier moet de afbeelding van de pagina komen-->
<div id="DossierModelTag" style="color:@(Model.foregroundColor)">
    <p>
        Tags: @foreach (var tag in @Model.vasteTags)
        { <span>@tag.naam, </span> }
    </p>
</div> <!--Hier moet de Tag van de pagina komen-->

<div id="TextWrapperTwo">


    <div id="DossierModelTwoTextVakEen">
        <p>@(Model.inhoud)</p>

    </div>

    <div id="TweeTextvakWrapperTwo">
        <div id="DossierModelTwoTextVakTwee">
            <p>
                @(Model.textvak2)
            </p>
        </div><!--Hier moet de tweedetextvak van de pagina komen-->

        <div id="DossierModelTwoTextVakDrie">
            <p>
                @(Model.textvak3)
            </p>
        </div><!--Hier moet de derde textvak van de pagina komen-->
    </div>
    @using (Html.BeginForm("DossierModelTwo", "Antwoord", new { id = Model.ID }, FormMethod.Post))
    {
        if (Model.statusOnline == false)
        {
            <button type="submit">Publish!</button>
        }
    }
    </div>



