@model PagedList.IPagedList<JPP.BL.Domain.Antwoorden.AgendaAntwoord>
@using PagedList
@using PagedList.Mvc
@{
    ViewBag.Title = "Agenda antwoorden";
    Layout = "";
}

<h2>Geblokkeerde Agenda antwoorden</h2>
