{
    <h2>Geen geblokkeerde antwoorden</h2>
}
else
{
<h2>@Model.First().module.naam: Antwoorden(@ViewBag.Aantal)</h2>
}*@



<p>
    @Html.ActionLink("Maak een antwoord", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Gebruiker
        </th>
        <th>
            Inhoud
        </th>
        <th>
            Extra info
        </th>
        <th>
            Datum
        </th>
        <th>
            Aantal stemmen
        </th>
        <th>
            Aantal flags
        </th>
        <th id="settingsLayout">Instellingen</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.gebruikersNaam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.inhoud)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.extraInfo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.datum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.aantalStemmen)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.aantalFlags)
            </td>
            <td>
                @Html.ActionLink("Wijzig", "_Edit", new { id = item.ID, moduleId = item.module.ID, type = "AdminAgenda" }) |
                @Html.ActionLink("Detail", "Details", new { id = item.ID }) |
                @Html.ActionLink("Verwijder |", "Verwijder", new { id = item.ID, moduleId = item.module.ID, type = "AgendaModule" })
                @if (item.statusOnline == false)
                {
                    @Html.ActionLink("Deblokkeer", "BlokkeerAgendaAntwoord", new { id = item.ID, moduleId = item.module.ID })

                }
            </td>
        </tr>
    }
</table>

<div id="pager2">
    @Html.PagedListPager(Model, page => Url.Action("_Lijst2",
    new { page }))
</div>

    <script>
        $(function () {
            $('#pager2').on('click', 'a', function () {
                if (this.href == "") { return; }
                $.ajax({
                    url: this.href,
                    type: 'GET',
                    cache: false,
                    success: function (result) {
                        $('#_Lijst2').html(result);
                    }
                });
                return false;
            });
        });

    </script>
