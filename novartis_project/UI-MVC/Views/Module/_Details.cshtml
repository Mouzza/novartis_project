@model JPP.BL.Domain.Modules.AgendaModule

@{
    ViewBag.Title = "Details agendamodule";
}


<h2>Details</h2>

<div>
    <h4>Agendamodule</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Admin naam:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.adminNaam)
        </dd>
        <dt>
            Module naam:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.naam)
        </dd>
        <dt>
            Begin datum:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.beginDatum)
        </dd>
        <dt>
            Eind datum:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.eindDatum)
        </dd>

        </br>
        <dt>
            Status:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.status)
        </dd>
        <dt>
            Thema:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.thema.naam)
        </dd>
        <dt>
            Central vraag:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.centraleVraag.inhoud)
        </dd>
        <br />
        <dt>
            Beloning naam:
        </dt>
       
            <dd>
                @Model.beloning.naam 
            </dd>
        

        <dt>
            Beloning beschrijving:
        </dt>
      

            <dd>
                @Model.beloning.beschrijving 
            </dd>
        
        <br />
        <dt>
            Aantal winnaars:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.centraleVraag.aantalWinAntwoorden)
        </dd>
        <dt>
            Aantal antwoorden:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.agendaAntwoorden.Count)
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Wijzig", "_Edit", new { id = Model.ID }) 
    @if (Model.agendaAntwoorden.Count == 0)
    {
        <h4>Aantal antwoorden: @Model.agendaAntwoorden.Count </h4>

    }
    else
    {
        <h4>@Html.ActionLink("Beheer de antwoorden("+@Model.agendaAntwoorden.Count + ")", "AgdAntwoorden", "Antwoord", new { id = @Model.ID }, null)</h4>
    }
    
</p>

<div>
    <a href="@Url.Action("AgdModules","Module")"><img src="~/Images/page icons/goBack2.png" /> Ga terug</a>
</div>
